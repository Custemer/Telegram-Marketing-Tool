<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            padding: 20px;
            color: white;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .header {
            background: rgba(255, 255, 255, 0.1);
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 25px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }
        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 25px;
            border-radius: 12px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-card h3 {
            color: #a0a0c0;
            font-size: 14px;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .stat-card .value {
            font-size: 42px;
            font-weight: bold;
            color: #4cc9f0;
            text-shadow: 0 0 10px rgba(76, 201, 240, 0.5);
        }
        .control-panel {
            background: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 25px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .btn {
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            margin: 8px;
            transition: all 0.3s;
            font-weight: bold;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .btn-start { 
            background: linear-gradient(135deg, #00b09b 0%, #96c93d 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 176, 155, 0.4);
        }
        .btn-stop { 
            background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(255, 65, 108, 0.4);
        }
        .btn-settings { 
            background: linear-gradient(135deg, #4776E6 0%, #8E54E9 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(71, 118, 230, 0.4);
        }
        .btn:hover { 
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }
        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        .status {
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            text-align: center;
            font-weight: bold;
            font-size: 20px;
            letter-spacing: 1px;
        }
        .status-running { 
            background: rgba(76, 201, 240, 0.2);
            color: #4cc9f0;
            border: 2px solid #4cc9f0;
            box-shadow: 0 0 20px rgba(76, 201, 240, 0.3);
        }
        .status-stopped { 
            background: rgba(255, 65, 108, 0.2);
            color: #ff416c;
            border: 2px solid #ff416c;
        }
        .groups-list, .members-list {
            background: rgba(255, 255, 255, 0.1);
            padding: 25px;
            border-radius: 15px;
            margin-top: 25px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .group-item, .member-item {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background 0.3s;
        }
        .group-item:hover, .member-item:hover {
            background: rgba(255, 255, 255, 0.05);
        }
        .notification {
            position: fixed;
            top: 30px;
            right: 30px;
            padding: 20px 30px;
            border-radius: 10px;
            background: linear-gradient(135deg, #00b09b 0%, #96c93d 100%);
            color: white;
            font-weight: bold;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            display: none;
            z-index: 1000;
            animation: slideIn 0.5s ease;
        }
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        .notification.error {
            background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
        }
        .badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: bold;
            background: rgba(76, 201, 240, 0.3);
            color: #4cc9f0;
        }
        h1, h2, h3 {
            background: linear-gradient(90deg, #4cc9f0, #4361ee);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="notification" id="notification"></div>
    
    <div class="container">
        <div class="header">
            <h1>ü§ñ <%= title %></h1>
            <p>Bot: @<%= botUsername %> | REAL Member Adder v3.0</p>
            <p style="color: #a0a0c0; margin-top: 10px;">Admin: @NOVA_X_TEAM | ID: 8581477799</p>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <h3>ACTIVE MEMBERS READY</h3>
                <div class="value" id="activeMembers"><%= stats.activeMembers %></div>
                <p style="color: #a0a0c0; margin-top: 10px;">Will be added to groups</p>
            </div>
            <div class="stat-card">
                <h3>REAL MEMBERS ADDED</h3>
                <div class="value" id="totalAdded"><%= stats.totalAdded %></div>
                <p style="color: #a0a0c0; margin-top: 10px;">Successfully added to groups</p>
            </div>
            <div class="stat-card">
                <h3>TARGET GROUPS</h3>
                <div class="value" id="totalGroups"><%= stats.totalGroups %></div>
                <p style="color: #a0a0c0; margin-top: 10px;">Where members are added</p>
            </div>
            <div class="stat-card">
                <h3>AUTO-ADD STATUS</h3>
                <div class="value" id="autoStatus">
                    <%= stats.isAutoAdding ? 'RUNNING üü¢' : 'STOPPED üî¥' %>
                </div>
                <p style="color: #a0a0c0; margin-top: 10px;"><%= stats.timerMinutes %>m / <%= stats.membersPerInterval %>üë•</p>
            </div>
        </div>
        
        <div class="control-panel">
            <h2>üéØ CONTROL PANEL</h2>
            
            <div class="status <%= stats.isAutoAdding ? 'status-running' : 'status-stopped' %>" id="statusDisplay">
                <%= stats.isAutoAdding ? '‚úÖ REAL MEMBERS BEING ADDED AUTOMATICALLY' : '‚è∏Ô∏è AUTO-ADD IS PAUSED' %> 
                | Uptime: <span id="uptime">0h 0m</span>
            </div>
            
            <div style="margin: 30px 0; text-align: center;">
                <button class="btn btn-start" id="startBtn" <%= stats.isAutoAdding ? 'disabled' : '' %>>
                    üöÄ START Adding REAL Members
                </button>
                <button class="btn btn-stop" id="stopBtn" <%= !stats.isAutoAdding ? 'disabled' : '' %>>
                    ‚èπÔ∏è STOP Auto-Add
                </button>
                <button class="btn btn-settings" id="refreshBtn">
                    üîÑ Refresh Dashboard
                </button>
            </div>
            
            <h3>üì¢ HOW TO GET ACTIVE MEMBERS</h3>
            <div style="background: rgba(255,255,255,0.05); padding: 20px; border-radius: 10px; margin: 20px 0;">
                <p>1. <strong>Share bot link</strong>: https://t.me/Nova_marketing_bot</p>
                <p>2. <strong>Users must START the bot</strong> (click /start)</p>
                <p>3. <strong>Their IDs will be collected automatically</strong></p>
                <p>4. <strong>They will be added to your groups</strong></p>
                <p style="margin-top: 15px; color: #4cc9f0;">
                    üí° <strong>Pro Tip:</strong> Share bot in your groups and ask members to START it
                </p>
            </div>
        </div>
        
        <% if (groups.length > 0) { %>
        <div class="groups-list">
            <h3>üéØ TARGET GROUPS (<%= groups.length %>)</h3>
            <p style="color: #a0a0c0; margin-bottom: 15px;">Members will be added to these groups</p>
            <% groups.forEach(function(group, index) { %>
            <div class="group-item">
                <div>
                    <strong style="font-size: 18px;"><%= index + 1 %>. <%= group.name %></strong><br>
                    <small style="color: #a0a0c0;">ID: <%= group.id %></small>
                </div>
                <div style="text-align: right;">
                    <div class="badge"><%= group.addedMembers %> added</div><br>
                    <small style="color: #a0a0c0;">Added: <%= new Date(group.addedAt).toLocaleDateString() %></small>
                </div>
            </div>
            <% }); %>
        </div>
        <% } %>
        
        <% if (activeMembers.length > 0) { %>
        <div class="members-list">
            <h3>üë• ACTIVE MEMBERS READY (<%= activeMembers.length %>)</h3>
            <p style="color: #a0a0c0; margin-bottom: 15px;">These users will be added to target groups</p>
            <% activeMembers.forEach(function(member, index) { %>
            <div class="member-item">
                <div>
                    <strong style="font-size: 16px;">ID: <%= member.userId %></strong><br>
                    <% if (member.username) { %>
                    <small style="color: #a0a0c0;">@<%= member.username %></small>
                    <% } %>
                </div>
                <div style="text-align: right;">
                    <small style="color: #a0a0c0;">
                        Added: <%= new Date(member.addedAt).toLocaleDateString() %><br>
                        Source: <%= member.source || 'bot' %>
                    </small>
                </div>
            </div>
            <% }); %>
        </div>
        <% } %>
        
        <div class="control-panel">
            <h2>üìã QUICK START GUIDE</h2>
            <div style="line-height: 2;">
                <p>1. <strong>Add bot to target group</strong> as ADMIN</p>
                <p>2. <strong>In the group</strong>, send: <code>/addgroup</code></p>
                <p>3. <strong>Share bot link</strong> to collect members: https://t.me/Nova_marketing_bot</p>
                <p>4. <strong>When users START bot</strong>, their IDs are collected</p>
                <p>5. <strong>Start auto-add</strong>: <code>/startauto</code> or use START button above</p>
                <p>6. <strong>Bot will add REAL members</strong> every <%= stats.timerMinutes %> minutes</p>
            </div>
        </div>
    </div>
    
    <script>
        function showNotification(message, isError = false) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = 'notification ' + (isError ? 'error' : '');
            notification.style.display = 'block';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 4000);
        }
        
        function formatUptime(seconds) {
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            return `${hours}h ${minutes}m`;
        }
        
        async function updateStats() {
            try {
                const response = await fetch('/api/stats');
                const data = await response.json();
                
                if (data.success) {
                    const stats = data.stats;
                    
                    // Update display
                    document.getElementById('activeMembers').textContent = stats.activeMembers;
                    document.getElementById('totalAdded').textContent = stats.totalAdded;
                    document.getElementById('totalGroups').textContent = stats.totalGroups;
                    document.getElementById('autoStatus').textContent = 
                        stats.isAutoAdding ? 'RUNNING üü¢' : 'STOPPED üî¥';
                    document.getElementById('uptime').textContent = formatUptime(stats.uptime);
                    
                    // Update status display
                    const statusDisplay = document.getElementById('statusDisplay');
                    statusDisplay.className = stats.isAutoAdding ? 'status status-running' : 'status status-stopped';
                    statusDisplay.innerHTML = stats.isAutoAdding ? 
                        '‚úÖ REAL MEMBERS BEING ADDED AUTOMATICALLY | Uptime: <span id="uptime">' + formatUptime(stats.uptime) + '</span>' :
                        '‚è∏Ô∏è AUTO-ADD IS PAUSED | Uptime: <span id="uptime">' + formatUptime(stats.uptime) + '</span>';
                    
                    // Update button states
                    document.getElementById('startBtn').disabled = stats.isAutoAdding;
                    document.getElementById('stopBtn').disabled = !stats.isAutoAdding;
                }
            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }
        
        async function controlBot(action) {
            try {
                const response = await fetch('/api/control', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ action })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('‚úÖ ' + result.message);
                    setTimeout(updateStats, 2000);
                } else {
                    showNotification('‚ùå ' + result.message, true);
                }
            } catch (error) {
                showNotification('‚ùå Error: ' + error.message, true);
            }
        }
        
        // Event listeners
        document.getElementById('startBtn').addEventListener('click', () => {
            if (confirm('üöÄ Start adding REAL ACTIVE members to groups?')) {
                controlBot('start');
            }
        });
        
        document.getElementById('stopBtn').addEventListener('click', () => {
            if (confirm('‚èπÔ∏è Stop auto-adding members?')) {
                controlBot('stop');
            }
        });
        
        document.getElementById('refreshBtn').addEventListener('click', () => {
            updateStats();
            showNotification('üîÑ Dashboard refreshed!');
        });
        
        // Auto-refresh every 5 seconds
        updateStats();
        setInterval(updateStats, 5000);
        
        // Initial update
        document.addEventListener('DOMContentLoaded', updateStats);
    </script>
</body>
</html>
